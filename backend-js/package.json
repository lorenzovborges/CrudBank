{
  "name": "crudbank-backend-js",
  "version": "1.0.0",
  "private": true,
  "description": "Woovi Challenge - Crud Bank GraphQL Relay backend in Node.js/Koa",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:smoke": "jest --runInBand tests/integration/idempotencyConcurrency.integration.test.ts tests/integration/rateLimit.integration.test.ts tests/integration/performanceSmoke.integration.test.ts",
    "test:parity": "node ./scripts/parity/run-parity-check.mjs",
    "verify": "npm run lint && npm run build && npm run test:coverage && npm run test:smoke && npm run test:parity",
    "test:watch": "jest --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.26",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-http": "^1.22.4",
    "graphql-query-complexity": "^1.1.0",
    "graphql-scalars": "^1.23.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "mongodb": "^6.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^3.3.1",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^22.13.1",
    "@types/graphql-depth-limit": "^1.1.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "generator-function": "1.0.0"
  }
}
